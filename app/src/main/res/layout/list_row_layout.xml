<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="event"
            type="com.example.recruitment.models.Event" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/listRowLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/row_cardView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@color/lightMediumGray"
            app:strokeWidth="1dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">


                <ImageView
                    android:id="@+id/connpassImageView"
                    android:layout_width="200dp"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop"
                    android:background="@color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/connpass_logo_logo" />

                <TextView
                    android:id="@+id/title_textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="12dp"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-black"
                    android:maxLines="2"
                    android:text="@{event.title}"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/connpassImageView"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/description_textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{event.description}"
                    android:layout_marginTop="12dp"
                    android:ellipsize="end"
                    android:maxLines="3"
                    android:textColor="@color/darkGray"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/title_textView"
                    app:layout_constraintTop_toBottomOf="@+id/title_textView" />

                <ImageView
                    android:id="@+id/date_imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    app:layout_constraintStart_toStartOf="@+id/description_textView"
                    app:layout_constraintTop_toBottomOf="@+id/description_textView"
                    app:srcCompat="@drawable/ic_calendar" />

                <TextView
                    android:id="@+id/date_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{event.startedAt}"
                    app:layout_constraintBottom_toBottomOf="@+id/date_imageView"
                    app:layout_constraintStart_toEndOf="@+id/date_imageView"
                    app:layout_constraintTop_toTopOf="@+id/date_imageView" />

                <TextView
                    android:id="@+id/end_date_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{event.endedAt}"
                    app:layout_constraintBottom_toBottomOf="@+id/date_textView"
                    app:layout_constraintStart_toEndOf="@+id/date_textView"
                    app:layout_constraintTop_toTopOf="@+id/date_textView" />

                <ImageView
                    android:id="@+id/participant_imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/accepted_tv"
                    app:layout_constraintStart_toStartOf="@+id/accepted_tv"
                    app:layout_constraintTop_toBottomOf="@+id/accepted_tv"
                    app:srcCompat="@drawable/ic_people" />

                <TextView
                    android:id="@+id/participant_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="38"
                    setNumberOfAccepted="@{event.accepted}"
                    app:layout_constraintBottom_toBottomOf="@+id/participant_imageView"
                    app:layout_constraintStart_toEndOf="@+id/participant_imageView"
                    app:layout_constraintTop_toTopOf="@+id/participant_imageView" />

                <TextView
                    android:id="@+id/participant_limit_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"
                    setNumberOfLimit="@{event.limit}"
                    app:layout_constraintBottom_toBottomOf="@+id/participant_limit_imageView"
                    app:layout_constraintStart_toEndOf="@+id/participant_limit_imageView"
                    app:layout_constraintTop_toTopOf="@+id/participant_limit_imageView" />

                <ImageView
                    android:id="@+id/participant_limit_imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/limit_tv"
                    app:layout_constraintStart_toStartOf="@+id/limit_tv"
                    app:layout_constraintTop_toBottomOf="@+id/limit_tv"
                    app:srcCompat="@drawable/ic_people" />

                <TextView
                    android:id="@+id/limit_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:text="定員数"
                    app:layout_constraintBottom_toBottomOf="@+id/accepted_tv"
                    app:layout_constraintStart_toEndOf="@+id/accepted_tv"
                    app:layout_constraintTop_toTopOf="@+id/accepted_tv"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/accepted_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="参加者"
                    app:layout_constraintStart_toStartOf="@+id/date_imageView"
                    app:layout_constraintTop_toBottomOf="@+id/date_imageView" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>